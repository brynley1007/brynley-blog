---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';

const links = [
  { name: 'Home', href: '/' },
  { name: 'Blog', href: '/blog' },
  { name: 'About', href: '/about' },
];
---

<header class="header">
  <div class="container">
    <a href="/" class="logo">{SITE_TITLE}</a>

    <!-- Burger -->
    <button id="menuButton" class="menu-button" aria-label="Toggle menu">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke="currentColor" fill="none" stroke-width="2" class="icon">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16m-7 6h7" />
      </svg>
    </button>

    <nav id="mainNav" class="nav">
      <ul>
        {links.map((link) => (
          <li><HeaderLink {...link} /></li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<!-- âœ… Hydrate on client -->
<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const button = document.getElementById('menuButton');
    const nav = document.getElementById('mainNav');

    if (!button || !nav) return;

    button.addEventListener('click', () => {
      nav.classList.toggle('open');
    });
  });
</script>

<style>
.header {
  background: var(--astro-bg, #fff);
  border-bottom: 1px solid #e5e5e5;
  padding: 0.75rem 1rem;
  position: sticky;
  top: 0;
  z-index: 50;
}

.container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  max-width: 960px;
  margin: 0 auto;
}

.logo {
  font-weight: 700;
  text-decoration: none;
  color: var(--astro-text, #111);
  font-size: 1.1rem;
}

.nav ul {
  list-style: none;
  display: flex;
  gap: 1.5rem;
  margin: 0;
  padding: 0;
}

.nav a {
  text-decoration: none;
  color: var(--astro-text, #111);
  font-weight: 500;
  transition: color 0.2s;
}

.nav a:hover {
  color: var(--astro-accent, #3b82f6);
}

.menu-button {
  display: none;
  background: none;
  border: none;
  cursor: pointer;
}

.icon {
  width: 28px;
  height: 28px;
}

/* Mobile */
@media (max-width: 700px) {
  .menu-button {
    display: block;
  }

  .nav {
    position: absolute;
    top: 64px;
    right: 1rem;
    background: var(--astro-bg, #fff);
    border: 1px solid #ddd;
    border-radius: 10px;
    padding: 1rem;
    display: none;
    box-shadow: 0 4px 10px rgba(0,0,0,0.05);
  }

  .nav.open {
    display: flex;
  }

  .nav ul {
    flex-direction: column;
    gap: 1rem;
  }
}
</style>
